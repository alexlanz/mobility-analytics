pipeline {
    agent {
        dockerfile {
            filename 'docker/dockerfile'
            additionalBuildArgs '--build-arg JENKINS_USER_ID=`id -u jenkins` --build-arg JENKINS_GROUP_ID=`id -g jenkins`'
        }
    }

    environment{
        TESTSERVER_TOMCAT_ENDPOINT=credentials('testserver-tomcat8-url')
        TESTSERVER_TOMCAT_CREDENTIALS=credentials('testserver-tomcat8-credentials')
    }

    stages {
        stage('Configure') {
            steps {
                sh 'sed -i -e "s/\\(\\w*<servers>\\)\\(<\\/servers>$\\)/\\1${TESTSERVER_TOMCAT_CREDENTIALS//./_}\\2/g\" ~/.m2/settings.xml'
                sh 'cp ~/.m2/settings.xml ./settings.xml'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn clean test'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn tomcat:redeploy -Dmaven.tomcat.url=${TESTSERVER_TOMCAT_ENDPOINT} -Dmaven.tomcat.server=testServer -X'
            }
        }
    }
}
