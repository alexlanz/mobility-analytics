pipeline {
	agent any
	stages {
		stage('Test') {
			steps {
				sh 'mvn clean test'
			}
		}
		stage('Build'){
			steps{
				sh 'mvn clean package'
			}
		}
		stage('Archive'){
			steps{
				sh 'cp -f target/analytics.war /var/builds/test-server/'
			}
		}
		stage('Deploy') {
            		steps{
		                sh 'mvn tomcat:redeploy -Dmaven.tomcat.url=${TESTSERVER_TOMCAT_ENDPOINT} -Dmaven.tomcat.server=testServer'
            		}
	        }
	}
}
